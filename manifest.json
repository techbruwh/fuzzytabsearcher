{
  "manifest_version": 3,
  "name": "Tab Searcher",
  "version": "1.2",
  "description": "Search through all open tabs quickly with a keyboard shortcut.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "open_tab_search": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the Tab Search popup"
    }
  } 
}
